<!DOCTYPE weblogic-rdbms-jar PUBLIC 
 '-//BEA Systems, Inc.//DTD WebLogic 6.0.0 EJB RDBMS Persistence//EN'
 'http://www.bea.com/servers/wls600/dtd/weblogic-rdbms20-persistence-600.dtd'>
<weblogic-rdbms-jar>

  <weblogic-rdbms-bean>
    <ejb-name>VideoEJB</ejb-name>
    <data-source-name>MyMusicRecHome</data-source-name>
    <table-name>Video_Recordings</table-name>
    	<field-map>
    	  <cmp-field>recordingId</cmp-field>
    	  <dbms-column>recording_id</dbms-column>
	</field-map>
    	<field-map>
	  <cmp-field>directorName</cmp-field>
	  <dbms-column>director</dbms-column>
	</field-map>
	<field-map>
	  <cmp-field>title</cmp-field>
	  <dbms-column>title</dbms-column>
	</field-map>
	<field-map>
	  <cmp-field>category</cmp-field>
	  <dbms-column>category</dbms-column>
	</field-map>
	<field-map>
	  <cmp-field>price</cmp-field>
	  <dbms-column>price</dbms-column>
    	</field-map>
  </weblogic-rdbms-bean>

  <weblogic-rdbms-bean>
    <ejb-name>ActorsEJB</ejb-name>
    <data-source-name>MyMusicRecHome</data-source-name>
    <table-name>Video_Actors</table-name>
    <field-map>
        <cmp-field>id</cmp-field>
        <dbms-column>id</dbms-column>
    </field-map>
    <field-map>
       <cmp-field>name</cmp-field>
       <dbms-column>name</dbms-column>
    </field-map>
    <field-map>
       <cmp-field>recId</cmp-field>
       <dbms-column>recording_id</dbms-column>
    </field-map>
  </weblogic-rdbms-bean>
  <weblogic-rdbms-relation>
    <relation-name>Video-Actor</relation-name>
      <table-name>VIDEO_ACTOR</table-name>
      <weblogic-relationship-role>
        <relationship-role-name>Video-Has-Actors</relationship-role-name>
          <column-map>
            <foreign-key-column>recording_id</foreign-key-column>
            <key-column>recording_id</key-column>
          </column-map>
      </weblogic-relationship-role>
      <weblogic-relationship-role>
        <relationship-role-name>Actors-in-Videos</relationship-role-name>
          <column-map>
            <foreign-key-column>id</foreign-key-column>
            <key-column>id</key-column>
          </column-map>
      </weblogic-relationship-role>
  </weblogic-rdbms-relation>

</weblogic-rdbms-jar>
